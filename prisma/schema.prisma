generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
id String @id @default(cuid())
first_name String
last_name String
email String @unique
phone_number String
gender Gender @default(MALE)
address String?
age Int?
nothing Int?
country Json?
continent Continent?
likes voterLikes[]
votes voterVotes[]
password String
salt String
role Role @default(USER) 
date_updated DateTime @updatedAt
date_created DateTime @default(now())
}
model voterLikes {
  id String @id @default(cuid())
  competition_id String
  user_id String
  voter User @relation(fields: [user_id],references: [id])
  competition_level CompetitionLevel
  participant_id String
  participant Participant @relation(fields: [participant_id],references: [id])
  date_updated DateTime @updatedAt
  date_created DateTime @default(now())
}
model voterVotes {
  id String @id @default(cuid())
  competition_id String
  competition Competition @relation(fields: [competition_id],references: [id])
  user_id String
  voter User @relation(fields: [user_id],references: [id])
  competition_level CompetitionLevel
  participant_id String
  participant Participant @relation(fields: [participant_id],references: [id])
  date_updated DateTime @updatedAt
  date_created DateTime @default(now())
}

model Competition {
  id String @id @default(cuid())
  competition_name String
  participants Participant []
  votes voterVotes[]
  competition_level CompetitionLevel @default(COUNTRY)
  competition_description String?
  status  Status @default(OPEN)
  periods Periods[]
  date_updated DateTime @updatedAt
  date_created DateTime @default(now())
}

model Periods {
  id String @id @default(cuid())
  level CompetitionLevel
  competition_id String
  competition Competition @relation(fields: [competition_id],references: [id])
  period_start_date DateTime
  period_end_date DateTime
  date_updated DateTime @updatedAt
  date_created DateTime @default(now())
}

enum Status {
  OPEN
  CLOSED
}
model Participant {
id String @id @default(cuid())
first_name String
last_name String
email String
competition_id String
competition Competition @relation(fields: [competition_id],references: [id])
phone_number String
gender Gender @default(MALE)
address String?
age Int?
competition_level CompetitionLevel? @default(COUNTRY)
country Json?
pictures Json?
continent Continent?
sponsors Json?
likes voterLikes[] 
votes voterVotes[]
date_updated DateTime @updatedAt
date_created DateTime @default(now())
}

model Attachments {
  id String @id @default(cuid())
  attachment_name String
  date_updated DateTime @updatedAt
  date_created DateTime @default(now())
}

enum CompetitionLevel {
  COUNTRY
  CONTINENT
  WORLD
}


enum Continent {
  NORTH_AMERICA
  SOUTH_AMERICA
  EUROPE
  AFRICA
  ASIA
  AUSTRALIA
  ANTARCTICA
  OCEANIA
}

enum Role {
  ADMIN
  MODEL
  USER
}

enum Gender {
  MALE
  FEMALE
}